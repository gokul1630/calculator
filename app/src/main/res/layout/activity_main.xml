<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center">

    <HorizontalScrollView
        android:id="@+id/calculation_scroll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:scrollbars="none"
        android:layout_weight="2">

        <TextView
            android:id="@+id/calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tool:text="123456789"
            android:layout_gravity="end"
            android:text=""
            android:textSize="100sp"
            android:singleLine="true"
            android:paddingRight="20dp" />

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="2">

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            tool:text="123456789"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="70sp"
            android:singleLine="true"
            android:paddingRight="20dp" />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clear"
            android:text="Clear"
            style="@style/NumberButton"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/startBracket"
            android:text="("
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/endBracket"
            android:text=")"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/add"
            android:text="+"
            style="@style/NumberButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_7"
            android:text="7"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/tv_8"
            android:text="8"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/tv_9"
            android:text="9"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/sub"
            android:text="-"
            style="@style/NumberButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_4"
            android:text="4"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/tv_5"
            android:text="5"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/tv_6"
            android:text="6"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/divide"
            android:text="/"
            style="@style/NumberButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1"
            android:text="1"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/tv_2"
            android:text="2"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/tv_3"
            android:text="3"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/multiply"
            android:text="x"
            style="@style/NumberButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dot"
            android:text="."
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/tv_0"
            android:text="0"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/back"
            android:text="Back"
            style="@style/NumberButton" />

        <TextView
            android:id="@+id/equals"
            style="@style/NumberButton" />
    </LinearLayout>


</LinearLayout>